# 環境変数設定例
# 本番環境では、これらの値を適切に設定してください

# Node.js環境設定
NODE_ENV=production
PORT=3000

# reCAPTCHA設定
# Google reCAPTCHA v3のサイトキーとシークレットキー
# https://www.google.com/recaptcha/admin から取得
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# メール送信設定
# SMTP設定（Gmail, SendGrid, AWS SES等）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 管理者メールアドレス（通知先）
ADMIN_EMAIL=admin@sadame.com

# 送信元メールアドレス
EMAIL_FROM=noreply@sadame.com
EMAIL_FROM_NAME=株式会社さだめ

# チャットワーク設定
# ChatWork APIトークンとルームID
# https://www.chatwork.com/service/packages/chatwork/subpackages/api/token.php から取得
CHATWORK_API_TOKEN=your_chatwork_api_token_here
CHATWORK_ROOM_ID=your_chatwork_room_id_here
# CHATWORK_WEBHOOK_URL=optional_webhook_url

# CORS設定（本番環境のドメイン）
ALLOWED_ORIGINS=https://sadame.com,https://www.sadame.com

# データベース設定（オプション）
# DATABASE_URL=postgresql://user:password@localhost:5432/sadame_db

# セキュリティ設定
# セッションシークレット（ランダムな文字列を生成）
SESSION_SECRET=generate_random_string_here

# ログ設定
LOG_LEVEL=info
LOG_FORMAT=json